.program i2s_mic
.side_set 2
.wrap_target
	nop side 1
	set x, 24 side 0
left:
	in pins, 1 side 1
	jmp x-- left side 0
	set x, 4 side 1
pad:
	nop side 0
	jmp x-- pad side 1
	set x, 30 side 2
right:
	nop side 3
	jmp x-- right side 2
	nop side 3
	nop side 0
.wrap

